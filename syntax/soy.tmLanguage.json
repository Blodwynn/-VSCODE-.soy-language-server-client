{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "soy",
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"include": "#soy"
		},
		{
			"include": "#html"
		}
	],
	"repository": {
		"soy": {
			"patterns": [
				{
					"name": "",
					"begin": "{",
					"end": "}",
					"beginCaptures": {
						"0": {
							"name": "constant.numeric"
						}
					},
					"endCaptures": {
						"0": {
							"name": "constant.numeric"
						}
					},
					"patterns": [
						{
							"name": "entity.name.tag",
							"match": "(deltemplate|template|call|delcall|client|if|switch|case|let|param) "
						},
						{
							"match": "(kind)=",
							"captures": {
								"1": {
									"name": "support.function"
								}
							}
						},
						{
							"match": "(namespace|package) (.*)",
							"captures": {
								"1": {
									"name": "entity.name.tag"
								},
								"2": {
									"name": "variable.parameter"
								}
							}
						},
						{
							"name": "entity.name.type",
							"match": "alias "
						},
						{
							"name": "entity.name.tag",
							"match": "else"
						},
						{
							"name": "entity.name.tag",
							"match": "/(deltemplate|template|call|delcall|let|param|if|switch)"
						},
						{
							"name": "variable.parameter",
							"match": "\\$[\\w\\d.?\\[\\]|]+"
						},
						{
							"include": "#strings"
						}
					]
				},
				{
					"name": "comment.line.double-slash",
					"match": "//.*"
				},
				{
					"name": "comment.block",
					"begin": "/\\*\\*",
					"end": "\\*/",
					"patterns": [
						{
							"match": "(@js|@css|@dependsOn) .*",
							"captures": {
								"1": {
									"name": "entity.name.type"
								}
							}
						},
						{
							"match": "(@param\\??) (.*)",
							"captures": {
								"1": {
									"name": "entity.name.type"
								},
								"2": {
									"name": "variable.parameter"
								}
							}
						},
						{
							"name": "keyword.control",
							"match": "@client"
						}
					]
				}
			]
		},
		"html": {
			"name": "support.function",
			"begin": "</?\\w+",
			"end": "/?>",
			"beginCaptures": {
				"0": {
					"name": "entity.name.tag"
				}
			},
			"endCaptures": {
				"0": {
					"name": "entity.name.tag"
				}
			},
			"patterns": [
				{
					"include": "#soy"
				},
				{
					"include": "#strings"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"include": "#soy"
						},
						{
							"include": "#strings"
						}
					]
				},
				{
					"name": "string.quoted.double",
					"begin": "\\'",
					"end": "\\'",
					"patterns": [
						{
							"include": "#soy"
						}
					]
				}
			]
		}
	},
	"scopeName": "source.soy"
}
